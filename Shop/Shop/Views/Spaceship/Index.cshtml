@model IEnumerable<Shop.Models.Product.SpaceshipListItem>

@{ 
    int queueNumber = 0;
}


<div class="h1">
    Spaceships
</div>
<div class="m-1">
    <a asp-action="add" asp-controller="spaceship" type="submit" class="btn btn-primary">Add</a>
</div>

<form method="post" class="m-1">
    <table class="table table-hove">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Model</th>
                <th scope="col">Company</th>
                <th scope="col">EnginePower</th>
                <th scope="col">Country</th>
                <th scope="col">LaunchDate</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">ModifieAt</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var spaceship in Model)
            {
                queueNumber+= 1;
            <tr>
                <th scope="row">@queueNumber</th>
                <td class="">@spaceship.Name</td>
                <td class="">@spaceship.Model</td>
                <td class="">@spaceship.Company</td>
                <td class="">@spaceship.EnginePower</td>
                <td class="">@spaceship.Country</td>
                <td class="">@spaceship.LaunchDate</td>
                <td class="">@spaceship.CreatedAt</td>
                <td class="">@spaceship.ModifieAt</td>
                <td class="">
                    <a asp-action="edit" asp-controller="spaceship" asp-route-id="@spaceship.Id" class="btn btn-primary">Edit</a>
                    <input asp-action="delete" asp-controller="spaceship" asp-route-id="@spaceship.Id" type="submit" class="btn btn-danger" value="Delete">
                </td>
            </tr>
            }
        </tbody>
    </table>
</form>